<% provide :title, t(".login") %>
<h1><%= t ".login" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="field">
        <%= f.label t(".email") %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label t(".pass") %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <%= f.submit t(".login"), class: "btn btn-primary btn_custom" %>
    <% end %>

    <p><%= link_to t(".signup"), signup_path %></p>
  </div>
</div>
