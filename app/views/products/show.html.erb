<% provide :title, @product.title %>
<div class="clear"></div>
<section class="main-detail">
  <div class="container">
    <div class="row">
      <div class="pathway">
        <ul class="path">
          <li>
            <%= link_to t(".home"), root_url %>
          </li>
          <% if parent_cate(@product.id).present? %>
            <li><%= link_to parent_cate(@product.id).name, "#" %></li>
          <% end %>
          <li><%= link_to @product.category.name, "#" %></li>
          <li><%= @product.title %></li>
        </ul>
      </div> <!-- het pathway -->
      <div class="content-detail">
        <div class="left">
          <%= image_tag @product.picture.url %>
        </div>
        <div class="right">
          <div class="product-infor">
            <h1><%= @product.title %></h1>
            <div class="viewfield">
              <div class="author">
                <span><%= t ".author" %>: <%= @product.author_name %> </span>
              </div>
              <div class="publisher">
                <span><%= t ".publisher" %>: <%= @product.publisher_name %></span>
              </div>
            </div> <!-- het viewfield -->
            <div class="prices-container">
              <div class="price">
                <%= number_to_currency(@product.price, unit: t(".vnd"), format: "%n %u")%>
              </div>
              <div class="goshop">
                <% if @product.num_exist.zero? %>
                  <div class="outstock"><% t ".out_stock" %></div>
                <% else %>
                  <%= form_with url: carts_path  do |f| %>
                    <%= f.number_field :quantity, value: 1, class: "number_custom" %>
                    <%= f.hidden_field :id, value: @product.id %>
                    <%= f.hidden_field :num_exist, value: @product.num_exist %>
                    <%= f.submit t(".add_to_cart"), class: "submit-btn btn" %>
                  <% end %>
                <% end %>
              </div>
            </div> <!-- het prices-container -->
            <div class="intro">
              <p><i class=" fa fa-check"></i><span><%= t ".free_plastic" %></span></p>
              <p><i class=" fa fa-check"></i><span><%= t ".free_ship" %></span></p>
              <p><i class=" fa fa-check"></i><span><%= t ".free_ship2" %></span></p>
              <label for="review_content"><%= t(".review") %></label>
            </div> <!-- het intro -->
          </div> <!-- het produce-infor -->
        </div> <!-- het right -->
        <div class="clear"></div>

        <div class="aboutbook">
          <div class="about">
            <h3><%= t ".book_intro" %></h3>
          </div>
          <div class="content collapse1" id="content">
            <p>
              <%= @product.description %>
            </p>
          </div>
          <div class="viewmore" onclick="viewmore()" id="viewmore">
            <span><%= t ".view_more" %></span>
          </div>
        </div> <!-- het gioi thieu sach -->
      </div> <!-- het content-detail -->
    </div>
    <% if logged_in? %>
      <%= render "form_review" %>
    <% end %>
    <% if @list_review %>
      <%= render "list_review" %>
    <% end %>
  </div> <!-- het container -->
</section>
